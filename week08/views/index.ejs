
<%- include('header'); -%>
<%- include('./navbar') %>
<title>Info</title>

    <h1>Views:  <%= views %></h1>
    
    <p>Xin chào <strong> <%= user ?  user.displayName : 'Khách' %> </strong> </p>

<style>
    .all-articles {
    margin: 0;
    padding: 5px;
    background-color: lightgray;
    }

    .all-articles > h1, .article {
    margin: 10px;
    padding: 5px;
    }

    .article {
    background: white;
    }

    .article > h2, p {
    margin: 4px;
    font-size: 90%;
    }
</style>
  <% if(articlelist) { %>
                <article class="all-articles">
                <h1>Covid-19 news</h1>      
                <% articlelist.forEach(article => { %>
                    <article class="article">
                        <h2><%= article.title %></h2>
                        <a  style ="color:#4682B4" href="<%= article.link %>"><%= article.link %></a>
                        <p style = "color:#008080">Date/Time: <span ><%= article.publishedAt %></span></p>
                        <p><%= article.content %></p>
                    </article>
                    <br>
                <% }) %>
                </article>
  
    <% } %>
<%- include('footer'); -%>